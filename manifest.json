{
  "manifest_version": 3,
  "name": "JobAssist",
  "version": "1.1",
  "description": "Helps manage links and contacts for job applications with an improved UI experience.",
  "permissions": ["storage", "sidePanel", "tabs", "scripting", "identity"],
  "host_permissions": ["https://*.linkedin.com/*", "https://mail.google.com/*"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobAssist",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "",
    "scopes": ["https://www.googleapis.com/auth/gmail.compose"]
  }
}
